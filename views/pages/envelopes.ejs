<!DOCTYPE html>
<html lang="en-us">
<head>
  <%- include ("../partials/head.ejs"); %>
	<!--postData()-->
	<script src="scripts/envelopes-funcs.js"></script>
	<!--removeMarkers()-->
	<style>
    li {
		  text-decoration: none;
	  }
	</style>
</head>
<body>
  <div id="wrapper" class="container-fluid">
	  <header class="row">
		  <div class="col-sm-4"></div>
			<h1 class="col-sm-4" style="text-align:center;"><strong>Envelopes</strong></h1>
			<div class="col-sm-4"></div>
		</header>
		<nav class="navbar navbar-inverse">
      <%- include ("../partials/nav.ejs") %>
		</nav>
		<main class="row">
			<div class="col-sm-6">
        <ul style="text-align: center;text-decoration:none;" id="envelopes-list" class="list-group"></ul>
			</div>
			<div class="col-sm-2"></div>
			<div class="col-sm-3">
        <form class="col-sm-7 row" action="/envelopes" method="post">
				  <div class="row center-block">
            <strong>Bill: </strong><br/><input type="text" name="name" required /><br/>
					</div>
					<div class="row center-block">
		        <strong>Amount: </strong><br/><input type="text" name="amount" required /><br/>
					</div>
					<br />
					<div class="row text-center col-sm-offset-1">
		        <input type="submit" class="btn btn-success" onclick="checkContent()"value="Submit" />
				    <input type="reset" class="btn btn-danger" value="Reset" />
					</div>
	      </form>
			</div>
		</main>
  </div>
	<script>
		window.onload = () => {
			const list = document.getElementById("envelopes-list");
		  const items = getData().then(jsonResponse => {list.innerHTML = jsonResponse.data}).then(() => {removeMarkers();});
		}
	</script>
</body>
</html>